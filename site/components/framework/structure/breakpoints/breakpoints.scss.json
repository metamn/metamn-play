{
  "breakpoints": [
    {
      "name": "mobile",
      "value": "37.5em",
      "description": "Screens smaller than 599px"
    },
    {
      "name": "tablet",
      "value": "64em",
      "description": "Screens between 600px and 1023px"
    },
    {
      "name": "laptop",
      "value": "90em",
      "description": "Screens between 1024px and 1399px"
    },
    {
      "name": "desktop",
      "value": "90em",
      "description": "Screens above 1440px"
    }
  ],
  "responsive_mixins": [
    {
      "name": "mobile",
      "media_query": "(max-width: $breakpoint-mobile - 0.001)"
    },
    {
      "name": "mobile-and-up",
      "media_query": "(min-width: $breakpoint-mobile)"
    },
    {
      "name": "tablet",
      "media_query": "(min-width: $breakpoint-mobile) and (max-width: $breakpoint-tablet - 0.001)"
    },
    {
      "name": "tablet-and-below",
      "media_query": "(max-width: $breakpoint-tablet - 0.001)"
    },
    {
      "name": "tablet-and-up",
      "media_query": "(min-width: $breakpoint-tablet)"
    },
    {
      "name": "laptop",
      "media_query": "(min-width: $breakpoint-tablet) and (max-width: $breakpoint-laptop - 0.001)"
    },
    {
      "name": "laptop-and-up",
      "media_query": "(min-width: $breakpoint-laptop)"
    },
    {
      "name": "desktop",
      "media_query": "(min-width: $breakpoint-laptop)"
    }
  ]
}
