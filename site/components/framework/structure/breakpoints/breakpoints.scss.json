{
  "breakpoints": [
    {
      "name": "mobile",
      "value": "600px",
      "description": "Screens smaller than 600px"
    },
    {
      "name": "tablet",
      "value": "1024px",
      "description": "Screens bigger than 600px and smaller than 1024px"
    },
    {
      "name": "desktop",
      "value": "1600px",
      "description": "Screens larger than 1600px"
    }
  ],
  "responsive_mixins": [
    {
      "name": "mobile",
      "media_query": "(max-width: $breakpoint-mobile - 0.1)"
    },
    {
      "name": "mobile-and-up",
      "media_query": "(min-width: $breakpoint-mobile)"
    },
    {
      "name": "tablet",
      "media_query": "(min-width: $breakpoint-mobile + 0.1) and (max-width: $breakpoint-tablet)"
    },
    {
      "name": "tablet-and-below",
      "media_query": "(max-width: $breakpoint-tablet)"
    },
    {
      "name": "tablet-and-up",
      "media_query": "(min-width: $breakpoint-tablet + 0.1)"
    },
    {
      "name": "desktop",
      "media_query": "(min-width: $breakpoint-desktop + 0.1)"
    }
  ]
}
