{
  "breakpoints": [
    {
      "name": "mobile",
      "value": "320px",
      "description": "Screens smaller than 320px"
    },
    {
      "name": "tablet",
      "value": "600px",
      "description": "Screens starting from 600px"
    }
  ],
  "responsive_mixins": [
    {
      "name": "mobile",
      "media_query": "(max-width: $breakpoint-mobile)"
    },
    {
      "name": "mobile-and-up",
      "media_query": "(min-width: $breakpoint-mobile + 0.1)"
    },
    {
      "name": "tablet",
      "media_query": "(min-width: $breakpoint-tablet) and (max-width: $breakpoint-laptop)"
    },
    {
      "name": "tablet-and-below",
      "media_query": "(max-width: $breakpoint-tablet - 0.1)"
    },
    {
      "name": "tablet-and-up",
      "media_query": "(min-width: $breakpoint-tablet + 0.1)"
    }
  ]
}
